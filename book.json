{
	"title": "js-tools",
	"description": "js 工具集",
	"author": "Sogrey",
	"output.name": "site",
	"language": "zh-hans",
	"gitbook": "3.2.3",
	"root": ".",
	"structure": {
		"readme": "README.md"
	},
	"links": {
		"sidebar": {
			"Home": "https://sogrey.github.io/"
		},
		"gitbook": true
	},
	"plugins": [
		"favicon@^0.0.2",
		"donate@^1.0.2",
		"advanced-emoji",
		"github",
		"tbfed-pagefooter",
		"toggle-chapters",
		"sectionx",
		"emphasize"
	],
	"pluginsConfig": {
		"theme-default": {
		     "showLevel": true
		},"fontsettings": {
			"theme": "sepia",
			"family": "serif",
			"size":  1
		},
		"favicon": {
			"shortcut": "favicon.ico",
			"bookmark": "favicon.ico"
		},
		"github": {
			"url": "https://github.com/Sogrey"
		},
		"donate": {
			"wechat": "https://sogrey.github.io/img/wechatPay.png",
			"alipay": "https://sogrey.github.io/img/alipay.jpg",
			"title": "",
			"button": "赏",
			"alipayText": "支付宝打赏",
			"wechatText": "微信打赏"
		},
		"sharing": {
			"weibo": true,
			"facebook": true,
			"twitter": false,
			"google": true,
			"instapaper": false,
			"vk": false,
			"all": [
				"facebook", "google", "twitter",
				"weibo", "instapaper"
			]
		},
		"tbfed-pagefooter": {
			"copyright": "Copyright &copy <a target='view_window' href='https://sogrey.github.io/'>Sogrey</a> 2017",
			"modify_label": "该文件修订时间：",
			"modify_format": "YYYY-MM-DD HH:mm:ss"
		}
	},
	"styles": {
		"website": "styles/website.css",
		"ebook": "styles/ebook.css",
		"pdf": "styles/pdf.css",
		"mobi": "styles/mobi.css",
		"epub": "styles/epub.css"
	},
	"github": "Sogrey/js-tools",
	"pdf": {
		"fontSize": 16
	}
}
